{
  "name": "staticdeployer",
  "version": "0.1.0",
  "private": true,
  "description": "Static site deployer using Cloudflare R2 + KV + Workers",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server/index.ts",
    "start": "node dist/server/index.js",
    "worker:dev": "wrangler dev worker/src/index.ts",
    "worker:deploy": "wrangler deploy worker/src/index.ts",
    "test:flow": "tsx scripts/test-flow.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.645.0",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "multer": "2.0.0",
    "nanoid": "5.0.7",
    "unzipper": "0.12.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241011.0",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.17.6",
    "@types/unzipper": "0.10.11",
    "archiver": "7.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "wrangler": "3.78.7"
  }
}

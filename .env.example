# Control plane environment
CF_ACCOUNT_ID=
CF_API_TOKEN=
# Optional: use Global API Key auth instead of CF_API_TOKEN
# If CF_API_TOKEN is set, it is preferred over the global key.
CF_EMAIL=
CF_API_KEY=

# Workers KV Namespace for host -> site mapping
CF_KV_NAMESPACE_ID=

# R2 (S3-compatible) credentials for uploads (control plane)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=
R2_REGION=auto

# Public domain base (for printing URLs)
PUBLIC_BASE_DOMAIN=yourdomain.com
